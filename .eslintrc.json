{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:react/recommended"
  ],
  "globals": {
    "React": "writable"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "import",
    "jsx-a11y",
    "react"
  ],
  "rules": {
    "consistent-return": 0,
    "no-console": ["error", { "allow": ["error", "warn"] }],
    "react/forbid-prop-types": 1,
    "react/jsx-curly-spacing": [2, {
      "when": "always",
      "spacing": { "objectLiterals": "never" }
    }],
    "react/jsx-filename-extension": 0,
    "react/jsx-props-no-spreading": 0,
    "react/react-in-jsx-scope": 0
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["^lib$", "./lib"],
          ["^pages$", "./pages"],
          ["^styles$", "./styles"]
        ],
        "extensions": [".css", ".js", "json", ".scss"]
      }
    }
  }
}
